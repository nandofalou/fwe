{
  "name": "fwe",
  "version": "1.0.1",
  "description": "fwe - Framework",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron . --dev",
    "devfull": "nodemon --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "electron . --dev --inspect=5858",
    "debug-server": "node --inspect=9229 server.js",
    "build": "electron-builder",
    "build:portable": "electron-builder --win portable",
    "build:debug": "electron-builder --win portable",
    "start:debug": "electron . --dev"
  },
  "keywords": [
    "electron",
    "framework",
    "web"
  ],
  "author": "CloudID",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.2",
    "ini": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^4.3.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "node-machine-id": "^1.1.12",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.cloudid.fwe",
    "productName": "fwe - Framework",
    "directories": {
      "output": "dist"
    },
    "files": [
      "App/**/*",
      "Public/**/*",
      "docs/**/*",
      "main.js",
      "package.json"
    ],
    "asarUnpack": [
      "App/Views",
      "Public",
      "docs"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/installer.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
