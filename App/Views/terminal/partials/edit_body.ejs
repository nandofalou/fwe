<!-- HEADER PADRÃO CRUD -->
<header class="mt-lg-n6 mb-4">
    <h1 class="h4 mb-0">Cadastro de Equipamentos</h1>
</header>

<!-- Flash Messages -->
<% if (hasFlash('devices')) { %>
    <div class="alert alert-<%= getFlash('devices').type %> alert-dismissible fade show" role="alert">
        <%= getFlash('devices').message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

        <!-- Equipamento Form -->
<div class="section rounded mb-3">
    <div class="bg-white shadow-md rounded">
        <div class="p-4 border-bottom d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <%= isEdit ? 'Editar Equipamento' : 'Novo Equipamento' %>
            </h5>
            <a href="<%= base_url('device') %>" class="btn btn-light border">
                <i class="fi fi-arrow-left me-2"></i>Voltar
            </a>
        </div>
        <div class="p-4">
            <form method="POST" action="<%= isEdit ? base_url('device/' + device.id) : base_url('device') %>"
                class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="pin" class="form-label">PIN</label>
                        <input type="text" class="form-control" id="pin" name="pin" maxlength="4"
                            value="<%= device ? device.pin : '' %>">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="ip" class="form-label">IP</label>
                        <input type="text" class="form-control" id="ip" name="ip" maxlength="20"
                            value="<%= device ? device.ip : '' %>">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="model" class="form-label">Model</label>
                        <select class="form-select" id="model" name="model">
                            <% if (models) { models.forEach(function(model) { %>
                                <option value="<%= model %>" <%=device && device.model==model ? 'selected' : ''
                                    %>><%= model %>
                                </option>
                                <% }); } %>
                        </select>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="name" class="form-label">Nome *</label>
                        <input type="text" class="form-control" id="name" name="name" maxlength="50"
                            value="<%= device ? device.name : '' %>" required>
                        <div class="invalid-feedback">Nome obrigatório.</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="plataform" class="form-label">Plataforma</label>
                        <input type="text" class="form-control" id="plataform" name="plataform" maxlength="50"
                            value="<%= device ? device.plataform : '' %>">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="category_group_id" class="form-label">Grupo</label>
                        <select class="form-select" id="category_group_id" name="category_group_id">
                            <option value="">Selecione</option>
                            <% if (categoryGroups) { categoryGroups.forEach(function(group) { %>
                                <option value="<%= group.id %>" <%=device && device.category_group_id==group.id
                                    ? 'selected' : '' %>><%= group.name %>
                                </option>
                                <% }); } %>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="active" class="form-label">Status</label>
                        <select class="form-select" id="active" name="active">
                            <option value="1" <%=device && device.active==1 ? 'selected' : '' %>>Ativo</option>
                            <option value="0" <%=device && device.active==0 ? 'selected' : '' %>>Inativo
                            </option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="<%= base_url('device') %>" class="btn btn-outline-secondary">
                        <i class="fi fi-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fi fi-check me-2"></i>
                        <%= isEdit ? 'Atualizar Equipamento' : 'Criar Equipamento' %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Form validation
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>