    cursor: pointer;
    margin-top: 10px;
    transition: all 0.3s ease;
}
.login-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
}
.login-footer {
    text-align: center;
    margin-top: 20px;
    color: #888;
    font-size: 0.98rem;
}
.login-footer a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
}
