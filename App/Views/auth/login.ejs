<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - FWE Framework</title>
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/flash.css">
    <!-- Removido CSS inline duplicado de flash-message -->
</head>
<body>
    <div class="container">
        <div class="login-card">
            <div class="login-header">
                <h1>🔐 Login</h1>
                <p>Entre com suas credenciais</p>
            </div>
            
            <!-- Flash Messages -->
            <% if (flash && Object.keys(flash).length > 0) { %>
                <% Object.keys(flash).forEach(function(key) { %>
                    <% const message = flash[key]; %>
                    <div class="flash-message <%= message.type %>" id="flash-<%= key %>">
                        <span class="icon">
                            <% if (message.type === 'success') { %>✅<% } %>
                            <% if (message.type === 'error') { %>❌<% } %>
                            <% if (message.type === 'warning') { %>⚠️<% } %>
                            <% if (message.type === 'info') { %>ℹ️<% } %>
                        </span>
                        <span><%= message.message %></span>
                        <button class="close" onclick="this.parentElement.remove()">×</button>
                    </div>
                <% }); %>
            <% } %>
            
            <form method="POST" action="/auth" class="login-form">
                <div class="form-group">
                    <label for="email">📧 Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="password">🔒 Senha</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <button type="submit" class="login-btn">
                    <span>🚀 Entrar</span>
                </button>
            </form>
            
            <div class="login-footer">
                <p>Não tem uma conta? <a href="/register">Registre-se</a></p>
                <p><a href="/">← Voltar para Home</a></p>
            </div>
        </div>
    </div>
    
    <script src="/js/flash.js"></script>
</body>
</html> 