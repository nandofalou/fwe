<!-- PAGE TITLE -->
<!-- Remover header superior duplicado -->

<!-- Flash Messages -->
<% if (hasFlash('events')) { %>
    <div class="alert alert-<%= getFlash('events').type %> alert-dismissible fade show" role="alert">
        <%= getFlash('events').message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Event Form -->
<div class="section rounded mb-3">
    <div class="bg-white shadow-md rounded">
        <div class="p-4 border-bottom d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><%= isEdit ? 'Editar Evento' : 'Novo Evento' %></h5>
            <a href="<%= base_url('event') %>" class="btn btn-light border">
                <i class="fi fi-arrow-left me-2"></i>Voltar
            </a>
        </div>
        
        <div class="p-4">
            <form method="POST" action="<%= isEdit ? base_url('event/' + event.id) : base_url('event') %>" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Nome do Evento *</label>
                        <input type="text" 
                               class="form-control" 
                               id="name" 
                               name="name" 
                               value="<%= event ? event.name : '' %>"
                               required>
                        <div class="invalid-feedback">
                            Nome do evento é obrigatório.
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label for="local" class="form-label">Local</label>
                        <input type="text" 
                               class="form-control" 
                               id="local" 
                               name="local" 
                               value="<%= event ? event.local : '' %>"
                               placeholder="Local do evento">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="startdate" class="form-label">Data de Início *</label>
                        <input type="date" 
                               class="form-control" 
                               id="startdate" 
                               name="startdate" 
                               value="<%= event && event.startdate ? event.startdate.split('T')[0] : '' %>"
                               required>
                        <div class="invalid-feedback">
                            Data de início é obrigatória.
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label for="enddate" class="form-label">Data de Fim *</label>
                        <input type="date" 
                               class="form-control" 
                               id="enddate" 
                               name="enddate" 
                               value="<%= event && event.enddate ? event.enddate.split('T')[0] : '' %>"
                               required>
                        <div class="invalid-feedback">
                            Data de fim é obrigatória.
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="active" class="form-label">Status</label>
                        <select class="form-select" id="active" name="active">
                            <option value="1" <%= event && event.active == 1 ? 'selected' : '' %>>Ativo</option>
                            <option value="0" <%= event && event.active == 0 ? 'selected' : '' %>>Inativo</option>
                        </select>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="<%= base_url('event') %>" class="btn btn-outline-secondary">
                        <i class="fi fi-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fi fi-check me-2"></i>
                        <%= isEdit ? 'Atualizar Evento' : 'Criar Evento' %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();

// Date validation
document.getElementById('startdate').addEventListener('change', function() {
    var startDate = this.value;
    var endDate = document.getElementById('enddate').value;
    
    if (startDate && endDate && startDate > endDate) {
        document.getElementById('enddate').setCustomValidity('Data de fim deve ser posterior à data de início');
    } else {
        document.getElementById('enddate').setCustomValidity('');
    }
});

document.getElementById('enddate').addEventListener('change', function() {
    var endDate = this.value;
    var startDate = document.getElementById('startdate').value;
    
    if (startDate && endDate && startDate > endDate) {
        this.setCustomValidity('Data de fim deve ser posterior à data de início');
    } else {
        this.setCustomValidity('');
    }
});
</script> 