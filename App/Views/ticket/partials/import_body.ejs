<!-- HEADER PRINCIPAL -->
<header class="mt-lg-n6 mb-4">
    <h1 class="h4 mb-0">Importar Tickets</h1>
</header>

<!-- Flash Messages -->
<% if (hasFlash('tickets')) { %>
    <div class="alert alert-<%= getFlash('tickets').type %> alert-dismissible fade show" role="alert">
        <%= getFlash('tickets').message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <!-- Formulário de Geração de Tickets -->
        <div class="section rounded mb-3">
            <div class="bg-white shadow-md rounded">
                <div class="p-4 border-bottom d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Importar Tickets</h5>
                    <a href="<%= base_url('ticket') %>" class="btn btn-light border">
                        <i class="fi fi-arrow-left me-2"></i>Voltar
                    </a>
                </div>
                <div class="p-4">
                    <form method="POST" action="<%= base_url('ticket/importtickets') %>" method="post" enctype="multipart/form-data" class="needs-validation"
                        novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select class="form-select form-select-sm filters" required id="event_id"
                                        name="event_id">
                                        <option value="">Selecione</option>
                                        <% events.forEach(function(event) { %>
                                            <option value="<%= event.id %>">
                                                <%= event.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                    <label for="event_id" class="form-label">Evento *</label>
                                </div>
                                <div class="invalid-feedback">Evento obrigatório.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select class="form-select" id="category_id" name="category_id" required>
                                        <option value="">Selecione</option>
                                        <% categories.forEach(function(category) { %>
                                            <option value="<%= category.id %>">
                                                <%= category.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                    <label for="category_id" class="form-label">Categoria *</label>
                                </div>
                                <div class="invalid-feedback">Categoria obrigatória.</div>
                            </div>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-3 mb-3 d-flex align-items-center">
                                <div class="form-control">
                                    <label class="d-flex align-items-center mb-1">
                                        <input class="d-none-cloaked" type="checkbox" name="active" id="active"
                                            checked="" value="1">
                                        <i class="switch-icon switch-icon-primary switch-icon-xs"></i>
                                        <span class="px-3 user-select-none">Ticket Ativo</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3 d-flex align-items-center">
                                <div class="form-control">
                                    <label class="d-flex align-items-center mb-1">
                                        <input class="d-none-cloaked" type="checkbox" name="master" id="master"
                                            checked="" value="1">
                                        <i class="switch-icon switch-icon-primary switch-icon-xs"></i>
                                        <span class="px-3 user-select-none">Cartão Mestre</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <input required="" type="file" id="file" class="form-control mb-1 js-advancified"
                                    name="file" placeholder="formFile" title="Tamanho do código (digitos), de 4 à 32"
                                    >
                                <span class="text-danger">Formato CSV separado por ponto-virgula e sem cabeçalho<br>
                                    <small>Ticket; Nome; Email; RG; CPF; CE1; Status; Mestre</small><br>
                                    <b>Exemplo: </b>"03254521";"Fulano";"";"";"campoExtra1";"1";"0"
                                </span>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="<%= base_url('ticket') %>" class="btn btn-outline-secondary">
                                <i class="fi fi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fi fi-check me-2"></i>Importar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            // Form validation
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        </script>