<header class="mt-lg-n6 mb-4">
    <h1 class="h4 mb-0">Cadastro de Grupos</h1>
</header>

<!-- Tabela de Grupos -->
<div class="section rounded mb-3">
    <div class="bg-white shadow-md rounded">
        <div class="p-4 border-bottom d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Lista de Grupos</h5>
            <a href="<%= base_url('group/edit') %>" class="btn btn-primary">
                <i class="fi fi-plus me-2"></i> Novo Grupo
            </a>
        </div>
        <!-- Filtros dentro do card -->
        <!-- <div class="p-4 pb-0">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label>Busca:</label>
                    <input type="text" class="form-control" id="filter_search" placeholder="">
                </div>
            </div>
        </div> -->
        <div class="p-4 pt-0">
            <div class="table-responsive">
                <table id="groupsTable" class="table datatable table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% groups.forEach(function(group) { %>
                            <tr>
                                <td><%= group.id %></td>
                                <td><%= group.name %></td>
                                <td>
                                    <a href="<%= base_url('group/edit/' + group.id) %>" class="btn btn-sm btn-outline-primary"><i class="fi fi-pencil"></i></a>
                                    <form method="POST" action="<%= base_url('group/' + group.id) %>" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este grupo?');">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fi fi-thrash"></i></button>
                                    </form>
                                    <a href="<%= base_url('group/' + group.id + '/category') %>" class="btn btn-sm btn-secondary" title="Associar Categorias"><i class="fi fi-gears"></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 