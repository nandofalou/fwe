<!-- PAGE TITLE -->
<header class="mt-lg-n6">
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h1 class="h4"><%= isEdit ? 'Editar Categoria' : 'Nova Categoria' %></h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb small">
                    <li class="breadcrumb-item"><a href="<%= base_url('dashboard') %>">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="<%= base_url('category') %>">Categorias</a></li>
                    <li class="breadcrumb-item text-muted active" aria-current="page">
                        <%= isEdit ? 'Editar' : 'Nova' %>
                    </li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="<%= base_url('category') %>" class="btn btn-outline-secondary">
                <i class="fi fi-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>
</header>

<!-- Flash Messages -->
<% if (hasFlash('categories')) { %>
    <div class="alert alert-<%= getFlash('categories').type %> alert-dismissible fade show" role="alert">
        <%= getFlash('categories').message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Category Form -->
<div class="section rounded mb-3">
    <div class="bg-white shadow-md rounded">
        <div class="p-4 border-bottom">
            <h5 class="mb-0"><%= isEdit ? 'Editar Categoria' : 'Criar Nova Categoria' %></h5>
        </div>
        
        <div class="p-4">
            <form method="POST" action="<%= isEdit ? base_url('category/' + category.id) : base_url('category') %>" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Nome da Categoria *</label>
                        <input type="text" 
                               class="form-control" 
                               id="name" 
                               name="name" 
                               value="<%= category ? category.name : '' %>"
                               required>
                        <div class="invalid-feedback">
                            Nome da categoria é obrigatório.
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label for="code" class="form-label">Código</label>
                        <input type="number" 
                               class="form-control" 
                               id="code" 
                               name="code" 
                               value="<%= category ? category.code : '' %>"
                               placeholder="Código da categoria">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="type" class="form-label">Tipo</label>
                        <select class="form-select" id="type" name="type">
                            <option value="CREDENCIADO" <%= category && category.type === 'CREDENCIADO' ? 'selected' : '' %>>Credenciado</option>
                            <option value="TICKET" <%= category && category.type === 'TICKET' ? 'selected' : '' %>>Ticket</option>
                            <option value="COLABORADOR" <%= category && category.type === 'COLABORADOR' ? 'selected' : '' %>>Colaborador</option>
                        </select>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label for="multiplo" class="form-label">Múltiplo</label>
                        <select class="form-select" id="multiplo" name="multiplo">
                            <option value="1" <%= category && category.multiplo == 1 ? 'selected' : '' %>>Sim</option>
                            <option value="0" <%= category && category.multiplo == 0 ? 'selected' : '' %>>Não</option>
                        </select>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label for="fluxo" class="form-label">Fluxo</label>
                        <input type="number" 
                               class="form-control" 
                               id="fluxo" 
                               name="fluxo" 
                               value="<%= category ? category.fluxo : 0 %>"
                               placeholder="0">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="external_id" class="form-label">ID Externo</label>
                        <input type="number" 
                               class="form-control" 
                               id="external_id" 
                               name="external_id" 
                               value="<%= category ? category.external_id : '' %>"
                               placeholder="ID externo">
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="<%= base_url('category') %>" class="btn btn-outline-secondary">
                        <i class="fi fi-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fi fi-check me-2"></i>
                        <%= isEdit ? 'Atualizar Categoria' : 'Criar Categoria' %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script> 